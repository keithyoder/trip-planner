div
  = link_to "Edit this waypoint", edit_trip_waypoint_path(@trip, @waypoint)
  |  | 
  = link_to "Back to waypoints", trip_waypoints_path(@trip)
  = button_to "Destroy this waypoint", [@trip, @waypoint], method: :delete
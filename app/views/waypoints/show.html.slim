p[style="color: green"]
  = notice
div[data-controller="maps"]
  #mycontainer[data-maps-target="container" class="h-[25rem] w-auto"style="min-height: 800px;" data-lon="#{@waypoint.lonlat.y}" data-lat="#{@waypoint.lonlat.x}"]
= render @waypoint
